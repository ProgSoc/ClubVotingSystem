    "express": "^4.18.1",
    "gel": "^2.1.1",
    "nanoid": "^3.3.4",
    "ws": "^8.9.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@gel/generate": "^0.7.0",
    "@types/bun": "^1.1.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^20.14.2",
    "@types/ws": "^8.5.3",
    "prettier": "^3.3.2"
  }
