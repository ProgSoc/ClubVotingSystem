{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "dev": "bun --watch ./src/server.ts",
    "build": "bun build --sourcemap=inline --target bun --outdir ./dist src/server.ts",
    "edgedb-migrate": "edgedb migration create && edgedb migrate && bun gen-edgedb",
    "gen-edgedb": "bunx @edgedb/generate interfaces && bunx @edgedb/generate edgeql-js"
  },
  "dependencies": {
    "@trpc/server": "^10.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "edgedb": "^1.5.7",
    "express": "^4.18.1",
    "nanoid": "^3.3.4",
    "ws": "^8.9.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@edgedb/generate": "^0.5.3",
    "@types/bun": "^1.1.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^20.14.2",
    "@types/ws": "^8.5.3",
    "prettier": "^3.3.2"
  }
}
